#:import Factory kivy.factory.Factory

<Character@Widget>:
	size_hint_y: 1.0/10
	canvas:
		Color:
			rgba: 1, 0, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size

<FieldButton@Button>:
	size_hint_y: 1.0/10

<ActionPrompt@Popup>:
	auto_dismiss: False
	size_hint: None, None
	size: 300, 300
	Button:
		text: 'close'
		on_release: root.close()

<MaMaGame>:
	BoxLayout:
		canvas:
			Color:
				rgba: 0, 0, 1, 0.5
			Rectangle:
				pos: self.pos
				size: self.size
		orientation: 'vertical'
		spacing: 5
		padding: 5
		size: root.size

		Label:
			size_hint: 1 , None
			font_size: 50
			height: self.font_size + 10
			text: str(root.t)
			canvas:
				Color:
					rgba: 1, 0, 0, 0.5
				Rectangle:
					pos: self.pos
					size: self.size
					
		GridLayout:
			canvas:
				Color:
					rgba: 0, 1, 0, 0.5
				Rectangle:
					pos: self.pos
					size: self.size
			spacing: 5
			padding: 5
			size_hint: 1, 0.9
			rows: 5

			FieldButton:#1
				text: 'open popup'
				on_release: Factory.ActionPrompt().create()
